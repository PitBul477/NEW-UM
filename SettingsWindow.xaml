<Window x:Class="NEW_UM.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
        Title="A" Height="450" Width="440">
	<Grid>
		<CheckBox x:Name="Internet" Content="Интернет" HorizontalAlignment="Left" Margin="29,24,0,0" VerticalAlignment="Top"/>
		<Button Click="Button_Click" Content="Применить" HorizontalAlignment="Left" Margin="23,0,0,0" VerticalAlignment="Center" Width="148"/>
		<TextBox x:Name="set1r" HorizontalAlignment="Left" Margin="179,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60"
         PreviewTextInput="TextBox_PreviewTextInput"/>
		<TextBox x:Name="set2r" HorizontalAlignment="Left" Margin="179,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60"
		 PreviewTextInput="TextBox_PreviewTextInput"/>
		<Button Click="Button_Click_1" Content="Отменить" HorizontalAlignment="Left" Margin="181,0,0,0" VerticalAlignment="Center"/>
		<Label Content="Интервал первого раунда:" HorizontalAlignment="Left" Margin="23,111,0,0" VerticalAlignment="Top"/>
		<Label Content="Интервал второго раунда:" HorizontalAlignment="Left" Margin="23,140,0,0" VerticalAlignment="Top"/>
		<TextBlock x:Name="info" HorizontalAlignment="Left" Height="200" Margin="261,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161">
		</TextBlock>
		<TextBox x:Name="setIP" HorizontalAlignment="Left" Margin="29,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134"/>
		<TextBox x:Name="setPort" HorizontalAlignment="Left" Margin="179,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60"
	  PreviewTextInput="TextBox_PreviewTextInput"/>
		<Label Content="Формат: xxx.xxx.xxx.xxx : xxxxx" FontSize="14" HorizontalAlignment="Left" Margin="17,40,0,0" VerticalAlignment="Top" Width="200"/>
		<Label Content="Адрес по-умолчанию: 92.124.142.200:12345" FontSize="10" HorizontalAlignment="Left" Margin="27,81,0,0" VerticalAlignment="Top" Width="213" Foreground="#FF797373"/>
		<Label Content=":" FontSize="14" HorizontalAlignment="Left" Margin="164,59,0,0" VerticalAlignment="Top" Width="14" Height="29"/>
		<!--TextBox Text="{Binding Setting1}" />
		<TextBox Text="{Binding Setting2}" /-->
	</Grid>
</Window>
